<div class="my-4">
	<h1 class="text-center">Modifier le commentaire</h1>
	
	<% if @gossip %>
		<% if @gossip.errors.any? %>
			<div class="alert alert-danger text-center">
				<p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
				
				<ul>
					<% @gossip.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>

			</div>
		<% end %>
	<% end %>

	<%= form_tag url_for(action: 'update'), method: "put" do %>

	<div class="col-6 mx-auto">
		<div class="form-group">
			<%= label_tag 'commentaire' %>
			<%= text_field_tag 'comment_content', @comment.content, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= submit_tag "Modifier", class: "btn btn-success" %>	
		</div>
	</div>
	<% end %>
</div>